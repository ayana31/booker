<h1>   Books</h1>

<table>
    <tr>
    	<th>Title</th>
    	<th>Body</th>
    </tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to"Show", book_path(book), class:"show_#{book.id}" %></td>
		<td><%= link_to"Edit", edit_book_path(book), class:"show_#{book.id}" %></td>
		<td><%= link_to"Destroy", book_path(book), method: :delete %></td>
	</tr>
	<% end %>
	</table>

<h2> New book</h2>
<%= form_for(@book) do |f| %>

